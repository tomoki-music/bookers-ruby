<h2>Books search for "<%= @word %>"</h2>

<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <thead>
        <tr>
          <th>image</th>
          <th>name</th>
        </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size:'100x100' %></td>
          <td><%= user.name%></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <thead>
        <tr>
          <th>image</th>
          <th>title</th>
          <th>opinion</th>
        </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size:'100x100' %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>